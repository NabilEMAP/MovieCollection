@model MovieCollection.UI.Models.MovieViewModel

<form method="post" asp-action="Delete">
    <input asp-for="Id" hidden />
    <div class="border p-3">
        @*<div asp-validation-summary="ModelOnly" class="text-danger"></div>*@
        <div class="form-group row">
            <h2 class="text-black-50 pl-3">Delete Movie</h2>
        </div>
        <div class="row">
            <div class="col-12">

                <div class="mb-3 row">
                    <div class="col-12">
                        <label asp-for="Title"></label>
                    </div>
                </div>
                <div class="mb-3 row">
                    <div class="col-12">
                        <input asp-for="Title" disabled class="form-control" />
                    </div>
                </div>

                <div class="mb-3 row">
                    <div class="col-12">
                        <label asp-for="ReleaseDate"></label>
                    </div>
                </div>
                <div class="mb-3 row">
                    <div class="col-12">
                        <input asp-for="ReleaseDate" disabled class="form-control" />
                    </div>
                </div>

                <div class="mb-3 row">
                    <div class="col-12">
                        <label asp-for="CountryId">Country</label>
                    </div>
                </div>
                <div class="mb-3 row">
                    <div class="col-12">
                        <select asp-for="CountryId" id="country" disabled class="form-control" asp-items="ViewBag.CountryId"></select>
                    </div>
                </div>

                <div class="mb-3 row">
                    <div class="col-12">
                        <label asp-for="DirectorId">Director</label>
                    </div>
                </div>
                <div class="mb-3 row">
                    <div class="col-12">
                        <select asp-for="DirectorId" id="country" disabled class="form-control" asp-items="ViewBag.DirectorId"></select>
                    </div>
                </div>

                <div class="mb-3 row">
                    <div class="col-12">
                        <label asp-for="GenreId">Genre</label>
                    </div>
                </div>
                <div class="mb-3 row">
                    <div class="col-12">
                        <select asp-for="GenreId" id="country" disabled class="form-control" asp-items="ViewBag.GenreId"></select>
                    </div>
                </div>

                <div class="mb-3 row">
                    <div class="col-9 offset-2 row">
                        <div class="col">
                            <input type="submit" class="btn btn-danger w-75" value="Delete" />
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-success w-75">Back</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
    }