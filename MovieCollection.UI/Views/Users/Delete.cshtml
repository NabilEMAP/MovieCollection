@model MovieCollection.DAL.Models.User

<form method="post" asp-action="DeletePost">
    <input asp-for="Id" hidden />
    <div class="border p-3">
        @*<div asp-validation-summary="ModelOnly" class="text-danger"></div>*@
        <div class="form-group row">
            <h2 class="text-black-50 pl-3">Delete User</h2>
        </div>
        <div class="row">
            <div class="col-12">

                <div class="mb-3 row">
                    <div class="col-6">
                        <label asp-for="FirstName"></label>
                    </div>
                    <div class="col-6">
                        <label asp-for="LastName"></label>
                    </div>
                </div>
                <div class="mb-3 row">
                    <div class="col-6">
                        <input asp-for="FirstName" disabled class="form-control" />
                    </div>
                    <div class="col-6">
                        <input asp-for="LastName" disabled class="form-control" />
                    </div>
                </div>

                <div class="mb-3 row">
                    <div class="col-9">
                        <label asp-for="Email"></label>
                    </div>
                    <div class="col-3">
                        <label asp-for="IsActive"></label>
                    </div>
                </div>
                <div class="mb-3 row">
                    <div class="col-9">
                        <input asp-for="Email" disabled class="form-control" />
                    </div>
                    <div class="col-3">
                        <select asp-for="IsActive" disabled class="form-control">
                            <option>Yes</option>
                            <option>No</option>
                        </select>
                    </div>
                </div>

                <div class="mb-3 row">
                    <div class="col-9 offset-2 row">
                        <div class="col">
                            <input type="submit" class="btn btn-danger w-75" value="Delete" />
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-success w-75">Back</a>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}